using System;

namespace MultiplicationTable
{
    class Program
    {
        static void Main(string[] args)
        {
            // Display a welcome message
            Console.WriteLine("Welcome to the Multiplication Table Program!");

            // Prompt the user for a number
            Console.Write("Enter a number to display its multiplication table: ");
            int number = Convert.ToInt32(Console.ReadLine());

            // Display the multiplication table
            Console.WriteLine($"\nMultiplication Table for {number}:\n");

            for (int i = 1; i <= 10; i++)
            {
                Console.WriteLine($"{number} x {i} = {number * i}");
            }

            // End the program
            Console.WriteLine("\nMultiplication table displayed successfully!");
            Console.WriteLine("Press any key to exit.");
            Console.ReadKey();
        }
    }
}
