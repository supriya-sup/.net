using System;

class Program
{
    static void Main()
    {
        Console.Write("Enter the number of rows: ");
        int rows = int.Parse(Console.ReadLine());

        for (int i = 1; i <= rows; i++)
        {
            Console.Write(new string(' ', rows - i));
            Console.WriteLine(new string('*', 2 * i - 1));
        }
    }
}
